.maincontent {
    height: 100%;
}

.home-page {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.content {
    position: relative;
    width: 700rpx;
    margin: 0rpx auto;
}

.player {
    position: relative;
    width: 550rpx;
    height: 192rpx;
}

.avatar_bg {
    position: relative;
    z-index: 10;
    width: 100%;
    height: 100%;
}

.avatar {
    position: absolute;
    left: 16rpx;
    top: 24rpx;
    width: 140rpx;
    height: 140rpx;
}

.user_msg {
    position: absolute;
    left: 180rpx;
    top: 24rpx;
    font-size: 32rpx;
    color: #fff;
    z-index: 11;
    line-height: 48rpx;
}

.user_score,
.user_session {
    font-size: 28rpx;
}

.setting {
    position: absolute;
    right: 0;
    top: 0;
    width: 195rpx;
    height: 192rpx;
}

.setting image {
    width: 100%;
    height: 100%;
}

.advertising {
    margin-top: 10rpx;
}

.advertising image {
    width: 100%;
    height: 100%;
}

.answer_content {
    position: relative;
    margin-top: 10rpx;
}

.answer_btn {
    width: 399rpx;
    height: 402rpx;
}

.ranking_btn {
    width: 343rpx;
    height: 197rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.share_btn {
    width: 414rpx;
    height: 197rpx;
    position: absolute;
    right: 0;
    bottom: 12rpx;
    background: transparent;
    padding: 0;
    margin: 0;
    border-radius: 0;
    outline: none;
    border: none;
    border-color: transparent;
}

button.share_btn::after {
    border: none;
}

.invite_btn {
    width: 414rpx;
    height: 197rpx;
}

.other_content {
    position: relative;
}

.questions_btn {
    width: 258rpx;
    height: 252rpx;
}

.shopping_btn {
    position: absolute;
    left: 199rpx;
    top: 0;
    width: 321rpx;
    height: 252rpx;
}

.guessing_btn {
    position: absolute;
    right: 0;
    top: 0;
    width: 241rpx;
    height: 252rpx;
}

.inform_content {
    position: relative;
    height: 82rpx;
}

.inform_bg {
    width: 100%;
    height: 82rpx;
}

.inform_msgs {
    width: 585rpx;
    height: 70rpx;
    line-height: 70rpx;
    position: absolute;
    left: 80rpx;
    top: 6rpx;
    font-size: 22rpx;
    color: #fff;
}

.inform_msgs swiper-item {
    line-height: 70rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


.bind_btn {
    width: 130rpx;
    height: 44rpx;
    vertical-align: middle;
}

.level {
    width: 50rpx;
    height: 50rpx;
    vertical-align: bottom;
}

.answer_over_popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
}
.answer_over_bg {
  position: relative;
  width: 650rpx;
  height: 541rpx;
  background: url("http://cdn.yooqapp.com/rc/games/answer_over_bg.jpg") no-repeat;
  background-size:100% 100%; 
}

.answer_over2_bg {
  position: relative;
  width: 650rpx;
  height: 580rpx;
  background: url("http://cdn.yooqapp.com/rc/games/answer_over2_bg.jpg") no-repeat;
  background-size:100% 100%;
}

.today_over_bg {
  position: relative;
  width: 650rpx;
  height: 541rpx;
  background: url("http://cdn.yooqapp.com/rc/games/today_over_bg.jpg") no-repeat;
  background-size:100% 100%;
}
.close_btn {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 60rpx;
  height: 68rpx;
}
.affirm_btn {
  position: absolute;
  width: 321rpx;
  height: 117rpx;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
}
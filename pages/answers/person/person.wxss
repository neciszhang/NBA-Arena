.person_bg {
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    z-index: -1;
}

.user {
    position: relative;
    width: 702rpx;
    margin: 30rpx auto;
    color: #fff;
}

.user .avatars {
    position: absolute;
    top: 0;
    left: 0;
    width: 220rpx;
    height: 220rpx;
}

/* .user .avatars image {
    width: 220rpx;
    height: 220rpx;
} */

.user .user_msg {
    position: absolute;
    top: 55rpx;
    left: 230rpx;
    width: 340rpx;
    z-index: 11;
    line-height: 60rpx;
}

.user .user_name {
    font-size: 40rpx;
    line-height: 1.2;
}

.user .user_score {
    margin: 10rpx 0;
    font-size: 32rpx;
}

.matches_session {
    font-size: 28rpx;
}

.session_num {
    color: #c40f2d;
}

.all_session_num {
    padding-left: 38rpx;
}

.banner {
    text-align: center;
}

.banner image {
    position: relative;
    width: 684rpx;
    margin-bottom: 50rpx;
    vertical-align: middle;
    z-index: 10;
}

.banner image.sub_banner {
    width: 710rpx;
    height: 185rpx;
}

image.focus_btn {
    width: 371rpx;
    height: 117rpx;
}

.person_user_bg {
    position: relative;
    width: 702rpx;
    height: 220rpx;
    z-index: 10;
}

.integral_icon {
    width: 40rpx;
    height: 48rpx;
    vertical-align: middle;
}

.level {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    right: 40rpx;
    top: 50rpx;
    z-index: 11;
}
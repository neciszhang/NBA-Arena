.question_bank_bg {
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  z-index: -1;
}

.title {
  margin-top: 78rpx;
  text-align: center;
  position: relative;
  z-index: 9;
}

.title image {
  width: 388rpx;
  height: 80rpx;
}

.questions {
  margin-top: 50rpx;
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  height: calc(100vh - 308rpx);
}

.options {
  margin-top: 60rpx;
}

.option {
  position: relative;
  width: 502rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  background: url("http://cdn.yooqapp.com/rc/games/option_bg.png") no-repeat;
  background-size: 100% 100%;
  margin: 0 auto 40rpx auto;
}

.option text {
  display: block;
  font-size: 30rpx;
}

.prv_btn {
  position: fixed;
  width: 185rpx;
  height: 88rpx;
  left: 140rpx;
  bottom: 50rpx;
  z-index: 10;
}

.next_btn {
  position: fixed;
  width: 185rpx;
  height: 88rpx;
  right: 140rpx;
  bottom: 50rpx;
  z-index: 10;
}

.once_again {
  position: fixed;
  bottom: 50rpx;
  left: 190rpx;
  width: 371rpx;
  height: 117rpx;
  z-index: 10;
}

.question {
  display: table;
  width: 750rpx;
  height: 160rpx;
  background: url("http://cdn.yooqapp.com/rc/games/question_bg.png") no-repeat;
  background-size: 100% 100%;
}

.question .question_num {
  display: table;
  position: absolute;
  width: 80rpx;
  height: 115rpx;
  left: 0;
  top: 24rpx;
  color: #fff;
}

.question .question_num>view {
  display: table-cell;
  vertical-align: middle;
}

.question text {
  width: 100%;
  height: 100%;
  padding: 0 60rpx 0 80rpx;
  box-sizing: border-box;
  display: table-cell;
  font-size: 34rpx;
  color: #fff;
  text-align: left;
  vertical-align: middle;
}

.right_bg {
  background: url("http://cdn.yooqapp.com/rc/games/option_right_bg.png") no-repeat;
  background-size: 100% 100%;
}


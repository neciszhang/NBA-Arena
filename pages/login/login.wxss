/* pages/login/login.wxss */

page {
  height: 100%;
  overflow: hidden;
}

.login {
  position: relative;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
}

.login-content {
  width: 649rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  overflow: hidden;
  position: relative;
}

.login-content .login-bg {
  width: 649rpx;
  height: 721rpx;
}

.login-title {
  position: absolute;
  width: 239rpx;
  height: 105rpx;
  top: 52rpx;
  left: 207rpx;
}

.login-close {
  position: absolute;
  width: 57rpx;
  height: 66rpx;
  top: 31rpx;
  right: 25rpx;
}

.login-form {
  width: 495rpx;
  position: absolute;
  left: 79rpx;
  top: 188rpx;
  color: #142851;
  font-size: 24rpx;
  box-sizing: border-box;
}

.login-word {
  margin-bottom: 8rpx;
}

.login-form1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  height: 64rpx;
  margin-bottom: 46rpx;
}

.login-form1-1 {
  width: 71rpx;
  text-align: right;
}

.login-form1-2 {
  width: 424rpx;
  text-align: left;
  padding-left: 11rpx;
}

.login-wrong {
  color: #df0013;
  position: inherit;
  left: 0;
  top: 106rpx;
}

.login-form2 {
  background: white;
  height: 64rpx;
  margin-bottom: 46rpx;
  overflow: hidden;
  line-height: 64rpx;
  position: relative;
}

.login-form2-1 {
  width: 100%;
  height: 100%;
  padding-left: 29rpx;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
}

.login-form2-2 {
  width: 235rpx;
  height: 64rpx;
  position: absolute;
  z-index: 1;
  right: 0;
  top: 0;
  text-align: right;
  color: white;
  padding-right: 33rpx;
  box-sizing: border-box;
}

.login-form2-3 {
  padding-right: 17rpx;
}

.login-form2-bg {
  position: absolute;
  width: 235rpx;
  height: 64rpx;
  right: 0;
  top: 0;
}

.login-wrong-captcha {
  color: #df0013;
  position: inherit;
  left: 0;
  top: 258rpx;
}

.login-form3 {
  display: flex;
  flex-direction: row;
}

.login-form3-1 .wx-checkbox-input {
  width: 26rpx;
  height: 26rpx;
  background: #3a89e9;
}

.login-form3-1 .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  /* background: red; */
}

.login-form3-1 .wx-checkbox-input.wx-checkbox-input-checked::before {
  /* border-radius: 50%; */
  width: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.login-form3-box {
  width: 40rpx;
}

.login-form3-2 {
  width: 445rpx;
}

.login-btn-box {
  width: 100%;
  text-align: center;
  line-height: 0;
  margin-top: 40rpx;
}

.login-btn {
  width: 295rpx;
  height: 80rpx;
}
